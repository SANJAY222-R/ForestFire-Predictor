{
  "expo": {
    "name": "Forest Fire Predictor",
    "slug": "forest-fire-predictor",
    "version": "2.1.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "extra": {
      "clerkPublishableKey": "pk_test_Y2hhcm1lZC1tb29zZS01Ni5jbGVyay5hY2NvdW50cy5kZXYk"
    },
    "scheme": "forest-fire-predictor",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#FFF8DC"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.forestfirepredictor.app"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#FFF8DC"
      },
      "package": "com.forestfirepredictor.app"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-notifications",
        {
          "icon": "./assets/images/notification-icon.png",
          "color": "#FFA500",
          "sounds": ["./assets/sounds/alert.mp3"]
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Forest Fire Predictor to use your location to provide local fire alerts and recommendations."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "router": {
      "origin": false
    },
    "eas": {
      "projectId": "your-eas-project-id"
    }
  }
}
